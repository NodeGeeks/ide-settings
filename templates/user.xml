<templateSet group="user">
  <template name="$on" value="$scope$.$on('$event$$action$', function () {$END$})" description="Event listener for existing" toReformat="true" toShortenFQNames="true">
    <variable name="scope" expression="" defaultValue="$scope" alwaysStopAt="true" />
    <variable name="event" expression="angularFactory(String componentType, String componentName)" defaultValue="object" alwaysStopAt="true" />
    <variable name="action" expression="" defaultValue="::sub" alwaysStopAt="true" />
    <context>
      <option name="JSX_HTML" value="true" />
      <option name="JS_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>